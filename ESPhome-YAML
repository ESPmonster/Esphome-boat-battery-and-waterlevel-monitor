  - platform: ultrasonic
    trigger_pin: GPIO16 
    echo_pin: GPIO17
    name: "Ultrasonic Sensor"
    id: ultrasonic_sensor
    state_topic: channels/<<channelid>>/publish/fields/<<fieldnumber>>/<<writeAPIkey>> #replace with your thingspeak input
